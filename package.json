{
  "name": "vet-course-generator",
  "version": "3.0.0",
  "description": "AI 獸醫課程生成系統 — 將獸醫專業知識通過 AI 自動化流水線轉換為線上課程影片",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "generate:knowledge": "tsx scripts/generate-knowledge.ts",
    "generate:syllabus": "tsx scripts/generate-syllabus.ts",
    "batch:scripts": "tsx scripts/batch-generate-scripts.ts",
    "batch:quality": "tsx scripts/batch-quality-check.ts",
    "batch:videos": "tsx scripts/batch-generate-videos.ts",
    "status": "tsx scripts/status-report.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@supabase/supabase-js": "^2.49.1",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
