{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["../src/lib/*"],
      "@types/*": ["../src/types/*"],
      "@schemas/*": ["../src/schemas/*"]
    },
    "types": ["node"]
  },
  "include": [
    "main/**/*.ts",
    "renderer/**/*.ts",
    "renderer/**/*.tsx",
    "types/**/*.ts",
    "../src/types/**/*.ts",
    "../src/schemas/**/*.ts",
    "../src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    ".vite"
  ]
}
